pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Checkout code from Git repository (specify correct branch)
                git branch: 'main', credentialsId: 'your-git-credentials-id', url: 'https://github.com/groverdev29/assignment'
                // Build the code using Maven
                sh 'mvn clean package'
            }
        }

        stage('Unit and Integration Tests') {
            steps {
                // Run unit tests using Maven
                sh 'mvn test'
                // Run integration tests using a specific tool (e.g., Newman)
                sh 'newman run my_collection.json'
            }
        }

        stage('Code Analysis') {
            steps {
                // Integrate code analysis tool (e.g., SonarQube)
                sh 'sonar-scanner'
            }
        }

        stage('Security Scan') {
            steps {
                // Perform security scanning using a specific tool (e.g., OWASP ZAP)
                sh 'zap-cli --scan <target-url>'
            }
        }

        stage('Deploy to Staging') {
            steps {
                // Deploy application to staging server (e.g., AWS EC2 instance)
                sh 'aws ecs deploy --cluster my-staging-cluster --service my-staging-service --image my-image:latest'
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                // Run integration tests on the staging environment
                sh 'newman run my_staging_collection.json'
            }
        }

        stage('Deploy to Production') {
            steps {
                // Deploy application to production server (e.g., AWS EC2 instance)
                sh 'aws ecs deploy --cluster my-production-cluster --service my-production-service --image my-image:latest'
            }
        }

        // Add more stages as needed for specific tasks

        stage('Additional Stage 1') {
            steps {
                // Add steps for additional stage 1
                echo 'Executing Additional Stage 1'
                sh 'some-command --option'
            }
        }

        stage('Additional Stage 2') {
            steps {
                // Add steps for additional stage 2
                echo 'Executing Additional Stage 2'
                sh 'another-command --option'
            }
        }
    }

    post {
        success {
            // Send email notification on pipeline success
            emailext (
                subject: "Pipeline Success",
                body: "The Jenkins pipeline completed successfully.",
                to: "devgrover55@gmail.com"
            )
        }
        failure {
            // Send email notification on pipeline failure
            emailext (
                subject: "Pipeline Failure",
                body: "The Jenkins pipeline failed. Please investigate.",
                to: "devgrover55@gmail.com"
            )
        }
    }
}
